<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.poohxx.notelist">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".activities.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_adv"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_adv_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteListPurple">

        <activity
            android:name=".settings.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.TaskListActivity"
            android:exported="true" />
        <activity
            android:name=".activities.NewNoteActivity"
            android:exported="true"
            android:theme="@style/Theme.NewNoteListPurple"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
    </application>


</manifest>